---
import { Image } from 'astro:assets';
import Card from './Card.astro';

const { pic, name, role, description } = Astro.props;
---

<Card isUnderline={true}>
  <div class="p-[60px]">
    <div class="flex flex-col sm:items-center sm:flex-row relative">
      <picture><Image src={pic} alt={name} class="rounded-full w-24" /></picture
      >
      <div class="flex flex-col justify-end sm:ml-5">
        <h3>{name}</h3>
        <p>{role}</p>
      </div>
    </div>
    <div class="w-full h-[1px] bg-black my-7"></div>
    <div>{description}</div>
  </div>
</Card>
